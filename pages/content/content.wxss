.fz14 {
  font-size: 14px;
}

.bt80 {
  margin-bottom: 80px;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.right {
  text-align: right;
}

.wh50 {
  width: 50%;
}

.bl {
  display: block;
}

.center {
  text-align: center;
}

.title {
  padding: 10px;
  font-size: 24px;
  text-align: center;
}
.arrow{
  position: absolute;
  width:0;
	height:0;
	border-right:6px solid transparent;
	border-left:6px solid transparent;
	border-top:6px solid #ccc;
  margin:-19px 0 0 0;
  right:20px;
}
.edittitle {
  margin: 10px;
  width: calc(100% - 32px);
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.mechanismSelect {
  margin: 10px 10px 0 10px;
  width: calc(100% - 32px);
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.type {
  padding: 0 10px;
  background-color: #effbef;
  color:#666;
  height:30px;
  line-height:30px;
}

.wrap {
  padding: 2px 10px 0 10px;
  color: #666;
  background: #f7f7f7;
  border-bottom: 1px solid #1aad19;
  height: 30px;
  line-height: 30px;
}

.recom {
  border-bottom: 1px solid #ccc;
}

.text {
  padding: 10px;
  font-size: 16px;
  line-height: 1.7;
}

.tools {
  width: calc(100% - 20px);
  position: fixed;
  margin: 0 10px;
  bottom: 10px;
  line-height: 30px;
  background:#fff;
}

.operation {
  margin: 10px 0 0 10px;
  text-align: center;
  display: inline-block;
  width: 30%;
  font-size:14px;
}

.avatar {
  float: left;
  border-radius: 3px;
  margin: 7px 3px 0 0;
  width: 16px;
  height: 16px;
}

.blank {
  width: 100%;
  height: 10px;
  background: #fff;
  display: block;
  position: fixed;
  bottom: 0;
}

.reply {
  width: 100%;
  position: fixed;
  bottom: 10px;
  border-top: 1px solid #1aad19;
  background: #fff;
  padding-top: 10px;
}

.reply button {
  margin: 10px 10px 0 10px;
}

.replywrap {
  margin: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.replytext {
  width: calc(100% - 32px);
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background: #fff;
  margin: 0 10px;
}

.replycontent {
  width: calc(100% - 20px);
  display: block;
  padding: 10px;
}

.addpic {
  margin: 10px 0 0 10px;
  text-align: left;
}

.viewpic {
  margin: 10px;
  width: 64px;
  height: 64px;
}

.atts {
  display: inline-block;
  padding: 0 20px;
  height: 46px;
  line-height: 46px;
  margin-right: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  text-align: center;
}
.replyButton{
  margin-left:5px;
  color:#179B16;
}